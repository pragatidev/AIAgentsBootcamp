      ],
      "example_request": "POST /embed/token HTTP/1.1\nHost: api.dataflow.com\nAuthorization: Bearer your_token\nContent-Type: application/json\n\n{\n  \"dashboard_id\": \"dash_123\",\n  \"expires_at\": \"2025-06-09T00:00:00Z\"\n}",
      "example_response": {
        "status": 201,
        "body": {
